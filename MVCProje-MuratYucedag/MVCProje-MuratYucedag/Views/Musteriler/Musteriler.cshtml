@using MVCProje_MuratYucedag.Models.Entity
@model List<TBLMusteriler>
@{
    ViewBag.Title = "Musteriler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Musteriler", "Musteriler", FormMethod.Get))
{
    <div class="form-group">
        <label class="text-muted">Müşteri Adı :</label>
        @Html.TextBox("nick")
    </div>
    <div class="form-group">
        <input type="submit" value="Ara" class="btn btn-success" />
    </div>
}

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">MUSTERI ID</th>
            <th scope="col">MUSTERI ADI</th>
            <th scope="col">MUSTERI SOYADI</th>
            <th scope="col">ISLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MusteriId</th>
                <td>@musteri.MusteriAd</td>
                <td>@musteri.MusteriSoyad</td>
                <td>
                    <a href="/Musteriler/MusteriSil/@musteri.MusteriId" class="btn btn-outline-danger" style="margin-left:-20px;">Sil</a>
                    <a href="/Musteriler/MusteriGuncelle/@musteri.MusteriId" class="btn btn-outline-primary">Guncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteriler/YeniMusteri/" class="btn btn-success">Yeni Müşteri</a>