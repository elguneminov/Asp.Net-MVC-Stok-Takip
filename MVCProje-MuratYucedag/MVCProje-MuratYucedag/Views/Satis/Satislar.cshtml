@model MVCProje_MuratYucedag.Models.Entity.TBLSatislar
@{
    ViewBag.Title = "Satislar";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>

<div class="modal fade" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" style="text-align:center">
                    Satış Yapma Ekranı
                </h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Satis/YeniSatis/">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-form-label">Ürün Adı :</label>
                        @Html.TextBoxFor(x => x.Urun, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Müşteri Adı Soyadı :</label>
                        @Html.TextBoxFor(x => x.Musteri, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Ürün Adet :</label>
                        @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Ürün Fiyat :</label>
                        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button class="btn btn-info">Satış Yap</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

