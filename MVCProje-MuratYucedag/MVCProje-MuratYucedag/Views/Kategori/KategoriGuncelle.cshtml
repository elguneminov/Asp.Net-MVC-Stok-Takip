@model MVCProje_MuratYucedag.Models.Entity.TBLKategoriler
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
            <div>
                @Html.LabelFor(x => x.KategoriId, new { @class = "text-muted" })
            </div>
            <div>
                @Html.TextBoxFor(x => x.KategoriId, new { @class = "form-control" })
            </div>
    </div>

    <div class="form-group">
        <div>
            @Html.LabelFor(x => x.KategoriAd, new { @class = "text-muted" })
        </div>
        <div>
            @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Kategori Güncelle</button>
    </div>
}

